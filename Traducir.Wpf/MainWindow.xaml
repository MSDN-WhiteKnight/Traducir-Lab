        <DataGrid x:Name="dgContent" HorizontalAlignment="Stretch" Margin="10,70,10,10" IsReadOnly="True"
                  VerticalAlignment="Stretch" AutoGenerateColumns="True" SelectionUnit="FullRow"/>

    </Grid>
